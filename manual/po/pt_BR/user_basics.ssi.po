" echo \"Levando o $1 para o modo bridged...\"\n"
" sudo /sbin/ifconfig $1 0.0.0.0 promisc up\n"
" echo \"Adicionando $1 to br0...\"\n"
" sudo /usr/sbin/brctl addif br0 $1\n"
